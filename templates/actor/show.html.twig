    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ actor.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
